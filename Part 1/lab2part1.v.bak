module lab2part1(SW,HEX0,HEX1,HEX2,HEX3)

	input [15:0]SW;
	output [6:0]HEX0,HEX1,HEX2,HEX3;
	
	assign HEX0 = 	(SW[3:0]==2'b0000)? 2'b1000000 :
						(SW[3:0]==2'b0001)? 2'b1111001 :
						(SW[3:0]==2'b0010)? 2'b1011011 :
						(SW[3:0]==2'b0011)? 2'b0110000 :
						(SW[3:0]==2'b0100)? 2'b0011001 :
						(SW[3:0]==2'b0101)? 2'b0010010 :
						(SW[3:0]==2'b0110)? 2'b0000010 :
						(SW[3:0]==2'b0111)? 2'b1111000 :
						(SW[3:0]==2'b1000)? 2'b0000000 :
						(SW[3:0]==2'b1001)? 2'b0011000 : 2'1111111;
		
endmodule